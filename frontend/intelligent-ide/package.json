{
  "$schema": "http://json.schemastore.org/package",
  "name": "intelligent-ide",
  "displayName": "intelligent-ide",
  "description": "a course-aware intelligent VScode plugin",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "intelligent-ide.login",
        "title": "Login",
        "category": "Intelligent IDE",
        "icon": "$(account)"
      },
      {
        "command": "intelligent-ide.register",
        "title": "Register",
        "category": "Intelligent IDE",
        "icon": "$(add)"
      },
      {
        "command": "intelligent-ide.update",
        "title": "Update",
        "category": "Intelligent IDE",
        "icon": "$(edit)"
      },
      {
        "command": "intelligent-ide.logout",
        "title": "Logout",
        "category": "Intelligent IDE",
        "icon": "$(sign-out)"
      },
      {
        "command": "intelligent-ide.switchRole",
        "title": "Switch Role",
        "category": "Intelligent IDE",
        "icon": "$(person)"
      },
      {
        "command": "intelligent-ide.course.refresh",
        "title": "Refresh Courses",
        "category": "Intelligent IDE: Course",
        "icon": "$(refresh)"
      },
      {
        "command": "intelligent-ide.course.post",
        "title": "Create Course",
        "category": "Intelligent IDE: Course",
        "icon": "$(add)"
      },
      {
        "command": "intelligent-ide.course.delete",
        "title": "Delete Course",
        "category": "Intelligent IDE: Course",
        "icon": "$(trash)"
      },
      {
        "command": "intelligent-ide.course.openFile",
        "title": "Open Course File",
        "category": "Intelligent IDE: Course",
        "icon": "$(file)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "intelligent-ide",
          "title": "Intelligent IDE",
          "icon": "src/resources/images/icon.svg"
        }
      ]
    },
    "views": {
      "intelligent-ide": [
        {
          "id": "loginView",
          "name": "Login View"
        },
        {
          "id": "courses",
          "name": "Course Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "intelligent-ide.login",
          "when": "view == loginView && !globalState.loginInfo",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.register",
          "when": "view == loginView && !globalState.loginInfo",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.update",
          "when": "view == loginView && globalState.loginInfo",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.logout",
          "when": "view == loginView && globalState.loginInfo",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.course.refresh",
          "when": "view == courses",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.course.post",
          "when": "view == courses && globalState.loginInfo && globalState.loginInfo.role == 'teacher'",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "intelligent-ide.course.delete",
          "when": "viewItem == course && globalState.loginInfo && globalState.loginInfo.role == 'teacher'",
          "group": "inline"
        },
        {
          "command": "intelligent-ide.course.openFile",
          "when": "viewItem == file || viewItem == entry-file",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "axios": "^1.8.1",
    "sinon": "^19.0.2"
  }
}