{
  "$schema": "http://json.schemastore.org/package",
  "name": "intelligent-ide",
  "displayName": "intelligent-ide",
  "description": "a course-aware intelligent VScode plugin",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onNotebook:*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "intelligent-ide.login",
        "title": "Login",
        "category": "Intelligent IDE",
        "icon": "$(account)"
      },
      {
        "command": "intelligent-ide.register",
        "title": "Register",
        "category": "Intelligent IDE",
        "icon": "$(add)"
      },
      {
        "command": "intelligent-ide.update",
        "title": "Update",
        "category": "Intelligent IDE",
        "icon": "$(edit)"
      },
      {
        "command": "intelligent-ide.logout",
        "title": "Logout",
        "category": "Intelligent IDE",
        "icon": "$(sign-out)"
      },
      {
        "command": "intelligent-ide.switchRole",
        "title": "Switch Role",
        "category": "Intelligent IDE",
        "icon": "$(person)"
      },
      {
        "command": "intelligent-ide.course.post",
        "title": "Create Course",
        "category": "Intelligent IDE: Course",
        "icon": "$(add)"
      },
      {
        "command": "intelligent-ide.course.delete",
        "title": "Delete Course",
        "category": "Intelligent IDE: Course",
        "icon": "$(trash)"
      },
      {
        "command": "intelligent-ide.course.openFile",
        "title": "Open Course File",
        "category": "Intelligent IDE: Course",
        "icon": "$(file)"
      },
      {
        "command": "intelligent-ide.course.join",
        "title": "Join Course",
        "category": "Intelligent IDE: Course",
        "icon": "$(debug-step-into)"
      },
      {
        "command": "intelligent-ide.directory.delete",
        "title": "Delete Directory",
        "category": "Intelligent IDE: Course",
        "icon": "$(trash)"
      },
      {
        "command": "intelligent-ide.directory.post",
        "title": "Create Directory",
        "category": "Intelligent IDE: Course",
        "icon": "$(new-folder)"
      },
      {
        "command": "intelligent-ide.entry.delete",
        "title": "Delete File",
        "category": "Intelligent IDE: Course",
        "icon": "$(trash)"
      },
      {
        "command": "intelligent-ide.entry.upload",
        "title": "Upload File",
        "category": "Intelligent IDE: Course",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "intelligent-ide.entry.move",
        "title": "Move File/Directory",
        "category": "Intelligent IDE: Course",
        "icon": "$(arrow-right)"
      },
      {
        "command": "intelligent-ide.student.delete",
        "title": "Remove Student",
        "category": "Intelligent IDE: Course",
        "icon": "$(trash)"
      },
      {
        "command": "intelligent-ide.views.refresh",
        "title": "Refresh Views",
        "category": "Intelligent IDE: View",
        "icon": "$(refresh)"
      },
      {
        "command": "intelligent-ide.notebook.new",
        "title": "New Notebook",
        "category": "Intelligent IDE: Notebook",
        "icon": "$(new-file)"
      },
      {
        "command": "intelligent-ide.notebook.open",
        "title": "Open Notebook",
        "category": "Intelligent IDE: Notebook",
        "icon": "$(file)"
      },
      {
        "command": "intelligent-ide.notebook.delete",
        "title": "Delete Notebook",
        "category": "Intelligent IDE: Notebook",
        "icon": "$(trash)"
      },
      {
        "command": "intelligent-ide.notebook.refresh",
        "title": "Refresh Notebook Explorer",
        "category": "Intelligent IDE: Notebook",
        "icon": "$(refresh)"
      },
      {
        "command": "intelligent-ide.notebook.exportToPdf",
        "title": "Export to PDF",
        "category": "Intelligent IDE: Notebook",
        "icon": "$(file-pdf)"
      },
      {
        "command": "intelligent-ide.notebook.openDefault",
        "title": "Open Default Notebook",
        "category": "Intelligent IDE: Notebook",
        "icon": "$(book)"
      },
      {
        "command": "intelligent-ide.chat.open",
        "title": "Open AI Chat Assistant",
        "category": "Intelligent IDE: Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "intelligent-ide.chat.clear",
        "title": "Clear AI Conversation History",
        "category": "Intelligent IDE: Chat",
        "icon": "$(clear-all)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "intelligent-ide",
          "title": "Intelligent IDE",
          "icon": "src/resources/images/icon.svg"
        },
        {
          "id": "notebookView",
          "title": "Notebooks",
          "icon": "src/resources/images/notebook-icon.svg"
        }
      ]
    },
    "views": {
      "intelligent-ide": [
        {
          "id": "loginView",
          "name": "Login View"
        },
        {
          "id": "courses",
          "name": "Course Explorer"
        },
        {
          "id": "notebookExplorer",
          "name": "Notebook Explorer",
          "contextualTitle": "Notebook Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "intelligent-ide.login",
          "when": "view == loginView && !globalState.loginInfo",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.register",
          "when": "view == loginView && !globalState.loginInfo",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.update",
          "when": "view == loginView && globalState.loginInfo",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.logout",
          "when": "view == loginView && globalState.loginInfo",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.course.post",
          "when": "view == courses && globalState.loginInfo && globalState.userRole == 'teacher'",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.course.join",
          "when": "view == courses && globalState.loginInfo && globalState.userRole == 'student'",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.views.refresh",
          "when": "view == courses && globalState.loginInfo",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.notebook.new",
          "when": "view == notebookExplorer",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.notebook.refresh",
          "when": "view == notebookExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "intelligent-ide.course.delete",
          "when": "viewItem == course && globalState.loginInfo && globalState.userRole == 'teacher'",
          "group": "inline"
        },
        {
          "command": "intelligent-ide.directory.delete",
          "when": "viewItem == directory && globalState.loginInfo&& globalState.userRole == 'teacher'",
          "group": "inline"
        },
        {
          "command": "intelligent-ide.directory.post",
          "when": "viewItem == course && globalState.loginInfo&& globalState.userRole == 'teacher'",
          "group": "inline"
        },
        {
          "command": "intelligent-ide.entry.delete",
          "when": "viewItem == entry-file || viewItem == entry-directory && globalState.userRole == 'teacher'",
          "group": "inline"
        },
        {
          "command": "intelligent-ide.entry.upload",
          "when": "viewItem == directory || viewItem == entry-directory",
          "group": "2_workspace"
        },
        {
          "command": "intelligent-ide.entry.move",
          "when": "viewItem == entry-file",
          "group": "1_modification"
        },
        {
          "command": "intelligent-ide.student.delete",
          "when": "viewItem == student && globalState.loginInfo && globalState.userRole == 'teacher'",
          "group": "inline"
        },
        {
          "command": "intelligent-ide.notebook.delete",
          "when": "viewItem == notebookItem",
          "group": "inline"
        },
        {
          "command": "intelligent-ide.notebook.exportToPdf",
          "when": "viewItem == notebookItem",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "intelligent-ide.notebook.new",
          "when": "true",
          "group": "navigation"
        },
        {
          "command": "intelligent-ide.notebook.open",
          "when": "true",
          "group": "navigation"
        }
      ]
    },
    "notebooks": [
      {
        "type": "my-notebook",
        "displayName": "My Notebook",
        "selector": [
          {
            "filenamePattern": "*.myipynb"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@types/pdfkit": "^0.13.9",
    "axios": "^1.8.1",
    "form-data": "^4.0.2",
    "openai": "^4.93.0",
    "pdfkit": "^0.17.0",
    "showdown": "^2.1.0",
    "sinon": "^19.0.2"
  }
}